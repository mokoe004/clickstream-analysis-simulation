FROM python:3.11

# Systemabh채ngigkeiten installieren
RUN apt-get update && \
    apt-get install -y curl openjdk-17-jdk unzip && \
    rm -rf /var/lib/apt/lists/*

# Umgebungsvariablen setzen
ENV JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64
ENV SPARK_VERSION=3.5.6
ENV HADOOP_VERSION=3
ENV SPARK_HOME=/opt/spark
ENV PATH=$SPARK_HOME/bin:$PATH

# Spark installieren
RUN curl -L https://archive.apache.org/dist/spark/spark-${SPARK_VERSION}/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION}.tgz \
    | tar -xz -C /opt && \
    ln -s /opt/spark-${SPARK_VERSION}-bin-hadoop${HADOOP_VERSION} /opt/spark

# Python-Abh채ngigkeiten installieren
RUN pip install --no-cache-dir kafka-python pyspark==${SPARK_VERSION}

# Ivy-Cache konfigurieren f체r --packages (vermeidet wiederholtes Herunterladen)
ENV SPARK_SUBMIT_OPTS="-Divy.cache.dir=/root/.ivy2/cache -Divy.home=/root/.ivy2"

# Arbeitsverzeichnis setzen
WORKDIR /app

# Standardkommando, wird von docker-compose 체berschrieben
CMD ["bash"]
